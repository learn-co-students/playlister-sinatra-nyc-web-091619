<h1>All The Songs!</h1>

<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<% if @message %>
    <h3>@message</h3>
<% end %>

<% @songs.each do |song|%>
<h2>- - - - - - - - - - - - - - - </h2>
<h2><a href="/songs/<%=song.slug%>" ><%=song.name%></a></h2>
<h3>By <%=song.artist.name%></h3>
<%end%>

